<h2>図書一覧</h2>

<table>
  <tr>
      <th>ISBN</th>
      <th>書籍名</th>
      <th>著者</th>
      <th>所在図書館</th>
      <th>貸出中</th>
      <th></th>
  </tr>

    <% @books.each do |book| %>
    <tr>
        <td> <%= book.isbn %></td>
        <td> <%= book.name %></td>
        <td> <%= book.author %></td>
        <td> <%= book.library %></td>
        <td> <%if book.lend_ids[0]  %>
              貸出中
             <% else %>
             <% end %>
        </td>
        <td>
        <%= button_to("編集", "/bookmanage/#{book.id}/edit", method: :get)%>
        <%= button_to("詳細", "/bookmanage/#{book.id}/detail", method: :get)%>
        <%= button_to("貸出", "/bookmanage/#{book.id}/lend" , method: :get)%>
        <%= button_to("返却", "/bookmanage/#{book.id}/return" , method: :get)%>
         </td>
    </tr>
    <% end %>
</table>

